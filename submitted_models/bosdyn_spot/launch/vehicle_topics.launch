<?xml version="1.0"?>
<launch>
  <env name="IGN_TRANSPORT_TOPIC_STATISTICS" value="1"/>
  <arg name="world_name"/>
  <arg name="name"/>
  <arg name="link_prefix" value="/world/$(arg world_name)/model/$(arg name)/link"/>
  <arg name="joint_prefix" value="/model/$(arg name)/joint"/>
  <arg name="breadcrumbs" default="0"/>

  <group ns="$(arg name)">
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_pose"
      args="/model/$(arg name)/pose@tf2_msgs/TFMessage[ignition.msgs.Pose_V">
      <remap from="/model/$(arg name)/pose" to="pose"/>
    </node>
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_pose_static"
      args="/model/$(arg name)/pose_static@tf2_msgs/TFMessage[ignition.msgs.Pose_V">
      <remap from="/model/$(arg name)/pose_static" to="pose_static"/>
    </node>

    <node
      pkg="subt_ros"
      type="pose_tf_broadcaster"
      name="pose_tf_broadcaster"/>

    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_twist"
      args="/model/$(arg name)/cmd_vel_relay@geometry_msgs/Twist]ignition.msgs.Twist">
      <remap from="/model/$(arg name)/cmd_vel_relay" to="cmd_vel"/>
    </node>

    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_odom"
      args="/model/$(arg name)/odometry@nav_msgs/Odometry[ignition.msgs.Odometry">
      <remap from="/model/$(arg name)/odometry" to="odom"/>
    </node>

    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_battery_state"
      args="/model/$(arg name)/battery/linear_battery/state@sensor_msgs/BatteryState[ignition.msgs.BatteryState">
      <remap from="/model/$(arg name)/battery/linear_battery/state" to="battery_state"/>
    </node>
    
    <!-- Joint Publisher (Publishes to topic but doesn't control...)-->
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_joint_state_publisher"
      args="/world/$(arg world_name)/model/$(arg name)/joint_state@sensor_msgs/JointState[ignition.msgs.Model">
      <remap from="/world/$(arg world_name)/model/$(arg name)/joint_state" to="joint_state"/>
    </node>

    <!-- Actuators -->
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_front_left_hip_x_motor"
      args="$(arg joint_prefix)/front_left_hip_x/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/front_left_hip_x/cmd_force" to="cmd_force/front_left_hip_x"/>
    </node>
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_front_left_hip_y_motor"
      args="$(arg joint_prefix)/front_left_hip_y/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/front_left_hip_y/cmd_force" to="cmd_force/front_left_hip_y"/>
    </node>
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_front_left_knee_motor"
      args="$(arg joint_prefix)/front_left_knee/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/front_left_knee/cmd_force" to="cmd_force/front_left_knee"/>
    </node>
    
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_front_right_hip_x_motor"
      args="$(arg joint_prefix)/front_right_hip_x/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/front_right_hip_x/cmd_force" to="cmd_force/front_right_hip_x"/>
    </node>
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_front_right_hip_y_motor"
      args="$(arg joint_prefix)/front_right_hip_y/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/front_right_hip_y/cmd_force" to="cmd_force/front_right_hip_y"/>
    </node>
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_front_right_knee_motor"
      args="$(arg joint_prefix)/front_right_knee/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/front_right_knee/cmd_force" to="cmd_force/front_right_knee"/>
    </node>
    
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_rear_left_hip_x_motor"
      args="$(arg joint_prefix)/rear_left_hip_x/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/rear_left_hip_x/cmd_force" to="cmd_force/rear_left_hip_x"/>
    </node>
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_rear_left_hip_y_motor"
      args="$(arg joint_prefix)/rear_left_hip_y/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/rear_left_hip_y/cmd_force" to="cmd_force/rear_left_hip_y"/>
    </node>
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_rear_left_knee_motor"
      args="$(arg joint_prefix)/rear_left_knee/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/rear_left_knee/cmd_force" to="cmd_force/rear_left_knee"/>
    </node>
    
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_rear_right_hip_x_motor"
      args="$(arg joint_prefix)/rear_right_hip_x/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/rear_right_hip_x/cmd_force" to="cmd_force/rear_right_hip_x"/>
    </node>
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_rear_right_hip_y_motor"
      args="$(arg joint_prefix)/rear_right_hip_y/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/rear_right_hip_y/cmd_force" to="cmd_force/rear_right_hip_y"/>
    </node>
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_rear_right_knee_motor"
      args="$(arg joint_prefix)/rear_right_knee/cmd_force@std_msgs/Float64]ignition.msgs.Double">
      <remap from="$(arg joint_prefix)/rear_right_knee/cmd_force" to="cmd_force/rear_right_knee"/>
    </node>

    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_multi_joint_command"
      args="/model/$(arg name)/joint_commands@sensor_msgs/JointState]ignition.msgs.Model">
      <remap from="/model/$(arg name)/joint_commands" to="joint_commands"/>
    </node>
    
    <!-- Slightly downward looking RGBD camera -->
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_camera"
      args="$(arg link_prefix)/base_link/sensor/camera/camera_info@sensor_msgs/CameraInfo[ignition.msgs.CameraInfo">
      <remap from="$(arg link_prefix)/base_link/sensor/camera/camera_info" to="front/camera_info"/>
    </node>
    <node
      pkg="ros_ign_image"
      type="image_bridge"
      name="ros_ign_image_camera"
      respawn="true"
      args="$(arg link_prefix)/base_link/sensor/camera/image">
      <remap from="$(arg link_prefix)/base_link/sensor/camera/image" to="front/image_raw"/>
    </node>
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_rgbd"
      args="$(arg link_prefix)/base_link/sensor/camera/points@sensor_msgs/PointCloud2[ignition.msgs.PointCloudPacked">
      <remap from="$(arg link_prefix)/base_link/sensor/camera/points" to="rgbd_camera/depth/points"/>
    </node>
    <node
      pkg="ros_ign_image"
      type="image_bridge"
      name="ros_ign_image_depth"
      respawn="true"
      args="$(arg link_prefix)/base_link/sensor/camera/depth_image">
      <remap from="$(arg link_prefix)/base_link/sensor/camera/depth_image" to="front/depth"/>
    </node>
    <node
      pkg="subt_ros"
      type="optical_frame_publisher"
      name="optical_frame_publisher_color">
      <remap from="input/image" to="front/image_raw" />
      <remap from="output/image" to="front/optical/image_raw" />
      <remap from="input/camera_info" to="front/camera_info" />
      <remap from="output/camera_info" to="front/optical/camera_info" />
    </node>
    <node
      pkg="subt_ros"
      type="optical_frame_publisher"
      name="optical_frame_publisher_depth"
      args="depth">
      <remap from="input/image" to="front/depth" />
      <remap from="output/image" to="front/optical/depth" />
    </node>

    <!--IMU-->
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_imu"
      args="$(arg link_prefix)/base_link/sensor/imu/imu@sensor_msgs/Imu[ignition.msgs.IMU">
      <remap from="$(arg link_prefix)/base_link/sensor/imu/imu" to="imu/data"/>
    </node>

    <!-- Gas sensor -->
    <node
      pkg="ros_ign_bridge"
      type="parameter_bridge"
      name="ros_ign_bridge_gas"
      args="/model/$(arg name)/gas_detected@std_msgs/Bool[ignition.msgs.Boolean">
      <remap from="/model/$(arg name)/gas_detected" to="gas_detected"/>
    </node>

    <group if="$(arg breadcrumbs)">
      <node
        pkg="ros_ign_bridge"
        type="parameter_bridge"
        name="ros_ign_bridge_breadcrumbs"
        args="/model/$(arg name)/breadcrumb/deploy@std_msgs/Empty]ignition.msgs.Empty">
        <remap from="/model/$(arg name)/breadcrumb/deploy" to="breadcrumb/deploy"/>
      </node>
    </group>
  </group>
  
</launch>
